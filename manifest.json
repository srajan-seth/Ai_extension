{
  "manifest_version": 3,
  "name": "AI Text Search (Groq)",
  "version": "1.0",
  "description": "Search selected text using Groq AI",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
